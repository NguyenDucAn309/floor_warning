  <title>ESP32 Sensor Dashboard</title>

  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-app.js";
    import { getDatabase, ref, onValue } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-database.js";

    const firebaseConfig = {
      apiKey: "AIzaSyDUgxuK6XL6DZY8jNeYKsmvsd8XYuQ_GsY",
      databaseURL: "https://floor-df6a0-default-rtdb.asia-southeast1.firebasedatabase.app/"
    };

    const app = initializeApp(firebaseConfig);
    const db = getDatabase(app);

    let currentMode = 'distance';
    const SAFE_DISTANCE = 20;
    const WARNING_DISTANCE = 10;

    function animateValue(element, newValue, unit = "") {
      const current = parseFloat(element.textContent) || 0;
      const target = parseFloat(newValue) || 0;
      const diff = target - current;
      const steps = 20;
      const stepValue = diff / steps;
      let currentStep = 0;

      const interval = setInterval(() => {
        currentStep++;
        const value = (current + stepValue * currentStep).toFixed(2);
        element.textContent = value + " " + unit;
        
        if (currentStep >= steps) {
          clearInterval(interval);
          element.textContent = target.toFixed(2) + " " + unit;
        }
      }, 30);
    }

    let lastUpdate = Date.now();
    let sensorData = {};
    
    onValue(ref(db, "/sensor"), (snapshot) => {
      sensorData = snapshot.val();
      lastUpdate = Date.now();
      
      document.getElementById("status").className = "status connected";
      document.getElementById("status").textContent = "ƒêang k·∫øt n·ªëi";
      
      updateDisplay();
      updateLEDs();
    });

    function updateDisplay() {
      const valueEl = document.getElementById("value");

      switch(currentMode) {
        case 'distance':
          if (sensorData?.ultrasonic?.distance !== undefined) {
            animateValue(valueEl, sensorData.ultrasonic.distance, "cm");
          }
          break;
        case 'flow':
          if (sensorData?.flow?.flow_L_min !== undefined) {
            animateValue(valueEl, sensorData.flow.flow_L_min, "L/min");
          }
          break;
        case 'volume':
          if (sensorData?.flow?.volume_L !== undefined) {
            animateValue(valueEl, sensorData.flow.volume_L, "L");
          }
          break;
      }
    }

    function updateLEDs() {
      const distance = sensorData?.ultrasonic?.distance || 0;
      
      const ledGreen = document.getElementById('led-green');
      const ledYellow = document.getElementById('led-yellow');
      const ledRed = document.getElementById('led-red');
      const statusText = document.getElementById('led-status-text');
      
      ledGreen.classList.remove('active');
      ledYellow.classList.remove('active');
      ledRed.classList.remove('active');
      
      if (distance > SAFE_DISTANCE) {
        ledGreen.classList.add('active');
        statusText.textContent = 'AN TO√ÄN';
        statusText.className = 'led-status-text safe';
      } 
      else if (distance >= WARNING_DISTANCE && distance <= SAFE_DISTANCE) {
        ledYellow.classList.add('active');
        statusText.textContent = 'C·∫¢NH B√ÅO';
        statusText.className = 'led-status-text warning';
      } 
      else if (distance > 0 && distance < WARNING_DISTANCE) {
        ledRed.classList.add('active');
        statusText.textContent = 'NGUY HI·ªÇM';
        statusText.className = 'led-status-text danger';
      }
      else {
        statusText.textContent = 'L·ªñI C·∫¢M BI·∫æN';
        statusText.className = 'led-status-text error';
      }
    }

    window.switchMode = function(mode) {
      currentMode = mode;
      
      document.querySelectorAll('.mode-btn').forEach(btn => {
        btn.classList.remove('active');
      });
      document.getElementById('btn-' + mode).classList.add('active');
      
      updateDisplay();
    }

    setInterval(() => {
      if (Date.now() - lastUpdate > 5000) {
        document.getElementById("status").className = "status disconnected";
        document.getElementById("status").textContent = "M·∫•t k·∫øt n·ªëi";
      }
    }, 1000);
  </script>

